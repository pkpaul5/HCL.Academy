@model HCL.Academy.Model.RSSFeedMaster

@{
    ViewBag.Title = "Create";
}
<div id="body">
    <section class="content-wrapper main-content clear-fix container">
        <ul class="breadcrumb">
            <li>@Html.ActionLink("RSSFeed List", "Index")</li>
            <li class="active">Add RSSFeed</li>
        </ul>
        <div class="row">
            <div class="col-md-12"><h2>Add RSSFeed</h2></div>
        </div>       

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                        <span style="color:red">*</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.TitleNode, "Title Node", htmlAttributes: new { @class = "control-label" })
                        <span style="color:red">*</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TitleNode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TitleNode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.RSSFeedUrl, "RSS Feed Url", htmlAttributes: new { @class = "control-label" })
                        <span style="color:red">*</span>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RSSFeedUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RSSFeedUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.DescriptionNode, "Description Node Path", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DescriptionNode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DescriptionNode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.hrfTitleNodePath, "HRF Title Node Path", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hrfTitleNodePath, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hrfTitleNodePath, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.PubDateNode, "Pub Date Node Path", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PubDateNode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PubDateNode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.itemNodePath, "Item Node Path", htmlAttributes: new { @class = "control-label" })
                    </div>
