@model HCL.Academy.Model.AcademyVideo

@{
    if (Model != null)
    {

        <div class="modal-dialog">
            <div class="modal-content profile-table">
                <div class="modal-header profile-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">@Model.title</h2>
                </div>
                <div class="modal-body profile-pan" id="modal-popup-video">
                    <video id="onlineVideo" controls width="566" height="300">
                        <source id="videoContent" src='@Url.Action("GetVideoStream", "AcademyVideo", new { url = @Model.url })' type="video/mp4">
                        I' m sorry; your browser doesn't support html5 video.>
                    </video>
                </div>
            </div>
            
        </div>



    }


}


<script type="text/javascript" language="Javascript">
    $(document).ready(function () {


        $("#onlineVideo").load();

        setTimeout(function () {
            $("video")[0].play();
        }, 5000);
    });
</script>