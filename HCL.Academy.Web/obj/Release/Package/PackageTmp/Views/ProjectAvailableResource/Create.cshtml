@using HCL.Academy.Model;

@model HCL.Academy.Model.ProjectResources

@{
    

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="body">

        <section class="content-wrapper main-content clear-fix container">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("First Level Project Management", "Index", "FirstLevelProject")</li>
                <li class="active">Project Available Resources</li>
            </ul>
            <br />
            <div class="form-horizontal">
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <h2>Available count of resources for the project</h2>
                    <div>Project Name : @Html.DisplayFor(model => model.projectName)@Html.HiddenFor(model => model.projectId, new { htmlAttributes = new { @class = "form-control" } })@Html.HiddenFor(model => model.projectName, new { htmlAttributes = new { @class = "form-control" } })</div>
                    <table class="table table-bordered admin-onbrdtble" id="onboard-data-table">
                        <thead>
                            <tr>
                                <th><b>Skill</b></th>
                                <th><b>Novice</b></th>
                                <th><b>AdvancedBeginner</b></th>
                                <th><b>Competent</b></th>
                                <th><b>Proficient</b></th>
                                <th><b>Expert</b></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.skillResources.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => m.skillResources[i].skill)@Html.HiddenFor(m => m.skillResources[i].skillId, new { htmlAttributes = new { @class = "form-control" } })@Html.HiddenFor(m => m.skillResources[i].skill, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    <td>@Html.TextBoxFor(m => m.skillResources[i].beginnerCount, new { Class = "form-control" })@Html.ValidationMessageFor(m => m.skillResources[i].beginnerCount, "", new { @class = "text-danger" })</td>
                                    <td>@Html.TextBoxFor(m => m.skillResources[i].advancedBeginnerCount, new { Class = "form-control" })@Html.ValidationMessageFor(m => m.skillResources[i].advancedBeginnerCount, "", new { @class = "text-danger" })</td>
                                    <td>@Html.TextBoxFor(m => m.skillResources[i].competentCount, new { Class = "form-control" })@Html.ValidationMessageFor(m => m.skillResources[i].competentCount, "", new { @class = "text-danger" })</td>
                                    <td>@Html.TextBoxFor(m => m.skillResources[i].proficientCount, new { Class = "form-control" })@Html.ValidationMessageFor(m => m.skillResources[i].proficientCount, "", new { @class = "text-danger" })</td>
                                    <td>@Html.TextBoxFor(m => m.skillResources[i].expertCount, new { Class = "form-control" })@Html.ValidationMessageFor(m => m.skillResources[i].expertCount, "", new { @class = "text-danger" })</td>
                                </tr>
                            }
                            <tr><td colspan="6"><input type="submit" value="Submit" class="btn btn-default" /></td></tr>
                            <tr>
                                <td colspan="6">
                                    @if (@ViewBag.Message != null)
                                    {
                                        <span style="color:green;font-weight:bold">
                                            @ViewBag.Message
                                        </span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


            <div>
                .
            </div>
        </section>
    </div>
}