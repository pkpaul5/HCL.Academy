
@model HCL.Academy.Model.SkillMaster
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="body">
    
    @if (ViewBag.Success == true)
    {
        <script>

        $(document).ready(function(){

        alert('Record saved successfully!');

        });

        </script>

    }
        <section class="content-wrapper main-content clear-fix container">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Skill List", "Index")</li>
                <li class="active">Update Skill</li>
            </ul>
            <div class="row">
                <div class="col-md-12"><h2>Update Skill</h2></div>
            </div>
            

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        <div class="col-md-1" style="text-align:left">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                            <span style="color:red">*</span>
                        </div>

                        <div class="col-md-8" style="padding-right: 5px;">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1" style="text-align:left">
                            @Html.LabelFor(model => model.IsDefault, htmlAttributes: new { @class = "control-label", style = "padding-top:0px !Important" })
                            @*<span style="color:red">*</span>*@
                        </div>

                        <div class="col-md-8" style="padding-right: 750px;">
                            @Html.EditorFor(model => model.IsDefault, new { htmlAttributes = new { @class = "form-control-checkbox" } })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1">

                        </div>
                        <div class="col-md-8">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </section>
</div>

