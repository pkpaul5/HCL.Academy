@model HCL.Academy.Model.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

<div id="body">
    <section class="content-wrapper main-content clear-fix container">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12"><h2>Reset your password</h2></div>
            </div>
            <div class="form-horizontal">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                @Html.HiddenFor(model => model.Email)
                <div class="row form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayTextFor(m => m.Email)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <span style="color:red">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        <span style="color:red">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-default" value="Reset" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        @if (ViewBag.msg != null)
                        {
                            <div style="color:green">
                                <b>@Html.Raw(ViewBag.msg)</b>
                            </div>
                           
                        }

                    </div>

                </div>

            </div>
        }
    </section>
</div>
