@using HCL.Academy.Model;
@model List<HCL.Academy.Model.UserCheckList>
<div class="headerOne">YOUR CHECKLIST <a class="seeMoreNew" href='@Url.Action("OnBoarding", "OnBoard")'>See More</a> </div>
@for (int i = 0; i < Model.Count; i++)
{
    if (i == 6) { break; }
    <div class="checkListBox checkBoxbox01">
        <div class="numberBox numberBox01">@(i+1)</div>
        <div class="ListText">@Model[i].Title</div>
        <div class="pull-right">
            @if (Model[i].CheckListStatus.ToUpper() == "TRUE")
            {
                <span>Done</span>
            }
            else
            {
                <span>WIP</span>
            }
        </div>
    </div>
}
