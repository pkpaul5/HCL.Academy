<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HCL Academy Hub</title>
    <link href="https://fonts.googleapis.com/css?family=Lato|Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/Images/favicon_academy.png" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon_academy.png" />

    @Styles.Render("~/Content/bootstrapCss")
    @Styles.Render("~/Content/logincss")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapJs")

   @Scripts.Render("~/bundles/loginJs")
    @RenderSection("scripts", required: false)
    <!-- Bootstrap -->
     
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" />
    

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        body {
            padding: 0;
        }

        .validation-summary-errors {
            color: #b94a48;
            text-align: center;
            top: 9em;
            position: absolute;
            right: 0;
            left: 0;
            font-size: 16px;
            color: red;
            /*max-width: 1170px;*/
            margin: auto;
        }

            .validation-summary-errors ul {
                padding: 0;
                margin: 0;
            }

        @@media screen and (max-width: 767px) {
            .validation-summary-errors {
                top: 6em;
                font-size: 14px;
            }

            .login-box {
                margin-top: 50px;
            }
        }
    </style>

</head>
<body>
    <div class="Main">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center; margin-top:20px;">&copy; @DateTime.Now.Year - HCL Technologies Ltd</p>
        </footer>
    </div>
    
</body>
</html>
