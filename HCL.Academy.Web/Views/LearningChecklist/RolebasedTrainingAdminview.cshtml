@using HCLAcademy.Utility;
@using HCL.Academy.Model;
@model IEnumerable<HCL.Academy.Model.UserTrainingDetail>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered admin-onbrdtble">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Training Name
                </th>
                <th>
                    Completion Date
                </th>
                <th>
                    Approve
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (UserTrainingDetail userTraining in Model)
            {
                <tr>
                    <td>
                        @userTraining.UserName
                    </td>
                    <td>
                        @userTraining.TrainingName
                    </td>
                    @*<td>
                            @if (userTraining.IsTrainingCompleted.Equals(false))
                            {
                                <a id="hrfskill" href="#" onclick="RoleTrainingMarkAsCompleted(@userTraining.TrainingId)" class="sta-adminbt">Mark As Completed</a>
                            }

                        </td>*@
                    <td>
                        @userTraining.CompletionDate
                    </td>
                    <td>
                        @{
                            var trainingname = "'" + @userTraining.TrainingName + "'";
                            var adminname = "'" + @userTraining.AdminName + "'";
                            var username = "'" + @userTraining.UserName + "'";
                            var useremail = "'" + @userTraining.EmailAddress + "'";
                        }
                        <a href="#" onclick="RoleTrainingApproval(@userTraining.TrainingId,@userTraining.UserId,'Approved',@adminname,@trainingname,@username,@useremail)" class="sta-adminbt">Approve</a>  |
                        <a href="#" onclick="RoleTrainingApproval(@userTraining.TrainingId,@userTraining.UserId,'Rejected',@adminname,@trainingname,@username,@useremail)" class="sta-adminbt">Reject</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No data available.</p>
}